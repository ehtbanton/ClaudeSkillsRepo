---
import { getCollection, type CollectionEntry } from 'astro:content';
import BaseLayout from '@/layouts/BaseLayout.astro';
import { formatDate } from '@/utils/date';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<BaseLayout title={post.data.title} description={post.data.description}>
  <article class="post">
    <header class="post-header">
      <time datetime={post.data.pubDate.toISOString()}>
        {formatDate(post.data.pubDate)}
      </time>
      <h1>{post.data.title}</h1>
      {post.data.description && <p class="description">{post.data.description}</p>}
      {post.data.tags && (
        <div class="tags">
          {post.data.tags.map((tag: string) => (
            <a href={`/tags/${tag}`} class="tag">{tag}</a>
          ))}
        </div>
      )}
    </header>

    <div class="prose">
      <Content />
    </div>
  </article>
</BaseLayout>

<style>
  .post { max-width: 65ch; margin: 0 auto; padding: 2rem; }
  .post-header { margin-bottom: 2rem; }
  .post-header time { color: #64748b; font-size: 0.875rem; }
  .post-header h1 { margin: 0.5rem 0; font-size: 2.5rem; }
  .description { color: #64748b; font-size: 1.125rem; }
  .tags { display: flex; gap: 0.5rem; margin-top: 1rem; }
  .tag { background: #f1f5f9; padding: 0.25rem 0.75rem; border-radius: 9999px; font-size: 0.875rem; text-decoration: none; color: #475569; }
  .tag:hover { background: #e2e8f0; }
  .prose { line-height: 1.75; }
</style>
